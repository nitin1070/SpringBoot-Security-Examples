package in.main.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import in.main.dto.RegisterRequest;
import in.main.model.Customer;
import in.main.reposistory.CustomerReposistory;

@Service
public class CustomerService {
	
	@Autowired
	private CustomerReposistory custRepo;
	public CustomerService(CustomerReposistory custRepo) {
		this.custRepo = custRepo;
	}
	
     public String register(RegisterRequest register) {
    	 Optional<Customer> cust = custRepo.findByEmail(register.getEmail());
    	  if(cust==null) {
    		  throw new UserDetailsNotFoundException("invalid user");
    	  }
    	  custRepo.save(null)
    	 
     }
}
